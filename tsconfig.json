{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "src/**/*.json",
    "projects/**/*"
  ],
  "exclude": [
    "projects/sophia/**/*" //exclude sophia from type-checking
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "lib": ["es2019", "dom"],
    "allowJs": true, //allow javaScript files
    "noImplicitAny": false
  },
  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
