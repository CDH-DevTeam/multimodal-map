{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "src/**/*.json",
    "projects/sophia/**/*"
    ],
  "exclude": [
    "projects/sophia/**/*"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "allowJs": true,
    "lib": ["es2019", "dom"],
    "noEmit": true,
    "noImplicitAny": false,
    "strict": false
  },

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
